        "def get_price():\n",
        "  url = 'https://api.coingecko.com/api/v3/coins/markets?vs_currency=USD&order=market_cap_d'\n",
        "  \n",
        "  contents =requests.get(url)\n",
        "  d = contents.json()\n",
        "  return d[0][\"current_price\"]\n",
        "  \n",
        "  \n"
      ],
      "execution_count": null,
